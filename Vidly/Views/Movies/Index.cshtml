@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@*<a href="" class="btn btn-info">NEW MOVIE</a>*@
@Html.ActionLink("NEW MOVIE", "Create", "Movies", null, new {@class = "btn btn-primary"})

@if(Model.Count == 0)
{
    <text>We have not movies yet</text>
}
else
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genres</th>
        </tr>
    </thead>
    
    @foreach (var movie in Model)
    {
<tr>
    <td><a href="/Movies/Edit/@movie.Id">@movie.Name</a></td>

    <td>@movie.Genre.Name</td>

    @*<td>
            @Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)
        </td>*@
</tr>
    }
</table>
}



